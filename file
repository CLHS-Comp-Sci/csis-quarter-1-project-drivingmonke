import java.util.ArrayList;
import java.util.List;

public class Animal {
    //import stuff

    //establish instance variables
    private String Name;
    private String classy;
    private String Habitat;
    private String Diet;
    private String fact;

    //make constructor
    public Animal(List<String> fish){
        Name = fish.get(0);
        classy = fish.get(1);
        Habitat = fish.get(2);
        Diet = fish.get(3);
        fact = fish.get(4);
    }

    public String getName(){
        return Name;
    }

    public String getclassy(){
        return classy;
    }

    public String getHabitat(){
        return Habitat;
    }

    public String getDiet(){
        return Diet;
    }

    public String getFact(){
        return fact;
    }

    public String getHint(int index){
        if (index == 0){
            return "Your animal is in the " + classy + " class.";
        }
        else if (index == 1){
            return "Your animal lives in the " + Habitat + ".";
        }
        else if (index == 2){
            return "Your animal is a " + Diet + ".";
        }
        else if (index == 3){
            return "Your animal is/has " + fact + ".";
        }
        else{
            return "nothing";
        }
    }

    public String toString(){
        return Name;
    }


}


