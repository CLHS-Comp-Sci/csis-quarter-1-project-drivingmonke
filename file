            String stringy = fi.nextLine();

            if (stringy.equals("Guess") || stringy.equals("I want to guess"))
            {
                String ans = fi.nextLine();
                if((one.checkGues(ans)).equals("You have correctly guessed the animal!")){
                    System.out.println("You have correctly guessed the animal!");
                    core = true;
                    break;

                }

            }
            else
            {
                System.out.println(selected.getHint(hintIndex));
            }
            one.wrongGuess();
            hintIndex++;

        }
        if (!core){
            System.out.println("Sorry you've ran out of attempts");
        }

    
    }
