public class Game {
    private int question;
    private int guess;
    private String animal;


    public Game(int qs, int gs, String nim) {
        question = qs;
        guess = gs;
        animal = nim;
    }

    public void wrongGuess()
    {
        question -= 1;
        guess -= 1;
    }

    public String getAnimal()
    {
        return animal;
    }

    public int getGuess()
    {
        return guess;
    }

    public int getQuestions()
    {
        return question;
    }

    public String checkGues(String gs)
    {
        if (gs.equals(animal))
        {
            return "You have correctly guessed the animal!";
        }
        else
        {
            wrongGuess();
            return "That is not the correct animal.";
        }
    }

    public String toString()
    {
        return "Questions remaining: " + question + "\nGuesses remaining: " + guess;
    }


}
